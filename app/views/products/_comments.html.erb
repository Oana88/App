<div class="product-reviews container-reviews">
    <% @comments.each do |comment| %>
        <div class="row-reviews col-sm-3">
            <hr>
            <p class="reviews">
                <%= comment.user.first_name %><small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> 
            </p>
            <div class="rated saved" data-score="<%= comment.rating %>"></div>
            <p><%= comment.body %></p>
            <% if signed_in? && current_user.admin? %>
            <%= link_to 'Destroy', product_comment_path(comment.product, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark btn-sm" %>
            <% end %>
        </div>
    <% end %>
</div>
