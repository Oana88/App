
<% if signed_in? %>
  <h4>Add a review</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
    </p>
    <div class="comments-box">
      <%= f.text_area :body, class: "form-control", id:"comments-box" %>
    </div>
    
      <div class="rating"></div>
      <%#= f.label :rating %><br>
      <%#= f.text_field :rating, class: "rating" %>  
    <p>
      <%= f.submit "Submit", class:"btn btn-outline-dark", id:"btn-signin" %>
    </p>
  <% end %>
<% end %>