<h2 class="login">Forgot your password?</h2>

<div class="container-signin">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-outline-dark", id:"btn-signin" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
